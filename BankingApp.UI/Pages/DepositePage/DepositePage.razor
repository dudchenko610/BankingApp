@page "/calculateDeposite"

<div class="container d-flex align-items-center justify-content-center flex-column mt-3 h-100">
    @switch (pageState)
    {
        case DepositePageState.DISPLAY_FORM_STATE:
            <ComponentDepositeForm OnFormSubmit="OnDepositeFormSubmit"/>
            break;
        case DepositePageState.LOADING_STATE:
            <ComponentCircleLoader/>
            break;
        case DepositePageState.DISPLAY_LIST_STATE:
            <DepositeResponseContainerComponent OnBackToForm="BackToForm">
                <DepositeResponseListComponent PerMonthInfos="@depositeResponse.PerMonthInfos"/>
            </DepositeResponseContainerComponent>
            break;
        default:
            <div></div>
            break;
    }
</div>