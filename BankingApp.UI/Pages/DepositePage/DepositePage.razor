@page "/calculateDeposite"


<div class="container d-flex align-items-center justify-content-center flex-column mt-3 h-100">
    @switch (_pageState)
    {
        case DepositePageStateEnumView.DisplayFormState:
            <DepositeForm OnFormSubmit="@OnDepositeFormSubmit" />
            break;
        case DepositePageStateEnumView.LoadingState:
            <CircleLoader />
            break;
        case DepositePageStateEnumView.DispalyListState:
            <CascadingValue Name="PerMonthInfos" Value="@depositeResponse.PerMonthInfos">
                <DepositeResponseContainer OnBackToForm="BackToForm" />
            </CascadingValue>
            break;
        default:
            <div></div>
            break;
    }
</div>